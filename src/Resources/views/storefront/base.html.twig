{% extends '@Storefront/storefront/base.html.twig' %}

{% block base_head %}
    {{ parent() }}

    {% set technicalName = null %}

    {% if context.shippingMethod.customFields.technical_name is not empty %}
        {% set technicalName = context.shippingMethod.customFields.technical_name %}
    {% endif %}

    {% if context.shippingMethod.translated.customFields.technical_name is not empty %}
        {% set technicalName = context.shippingMethod.translated.customFields.technical_name %}
    {% endif %}

    {% if page is defined and page.shippingMethods is defined and technicalName == constant('BitBagShopwareOrlenPaczkaPlugin\\Factory\\ShippingMethodPayloadFactoryInterface::SHIPPING_KEY') %}
        <script
            src="https://mapa.ecommerce.poczta-polska.pl/widget/scripts/ppwidget.js">
        </script>
    {% endif %}
{% endblock %}
