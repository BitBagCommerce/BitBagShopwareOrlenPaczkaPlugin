<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>API Configuration</title>
        <title lang="pl-PL">Konfiguracja API</title>

        <input-field>
            <name>username</name>
            <label>Username</label>
            <placeholder>Username</placeholder>
            <label lang="pl-PL">Nazwa użytkownika</label>
            <placeholder lang="pl-PL">Nazwa użytkownika</placeholder>
            <required>true</required>
        </input-field>

        <input-field type="password">
            <name>password</name>
            <label>Password</label>
            <placeholder>Password</placeholder>
            <label lang="pl-PL">Hasło</label>
            <placeholder lang="pl-PL">Hasło</placeholder>
            <required>true</required>
        </input-field>

        <input-field type="single-select">
            <name>originOffice</name>
            <label>Origin offices</label>
            <label lang="pl-PL">Urzędy nadania</label>
            <placeholder>Origin office</placeholder>
            <placeholder lang="pl-PL">Urząd nadania</placeholder>
            <required>true</required>
            <options>
                <option>
                    <id></id>
                    <name>Authenticate first</name>
                    <name lang="pl-PL">Uwierzytelnij się danymi swojego konta</name>
                </option>
            </options>
        </input-field>

        <input-field type="single-select">
            <name>environment</name>
            <label>Environment</label>
            <placeholder>Choose environment</placeholder>
            <label lang="pl-PL">Środowisko</label>
            <placeholder lang="pl-PL">Wybierz środowisko</placeholder>
            <required>true</required>
            <options>
                <option>
                    <id>sandbox</id>
                    <name>Sandbox</name>
                    <name lang="pl-PL">Deweloperskie</name>
                </option>
                <option>
                    <id>production</id>
                    <name>Production</name>
                    <name lang="pl-PL">Produkcyjne</name>
                </option>
            </options>
        </input-field>
    </card>
</config>
